# ============================================
# ATTENDANCE DASHBOARD - PRODUCTION ENVIRONMENT
# ============================================
# Copy this file to .env for production deployment
# Update values according to your deployment environment

# ============================================
# APPLICATION SETTINGS
# ============================================
NODE_ENV=production
PORT=3002

# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL Database Settings
DB_HOST=postgres
DB_PORT=5432
DB_NAME=attendance_dashboard
DB_USER=attendance_user
DB_PASSWORD=nVp50Q8PefBbCqXNiLmOb45K0ZXCHv7EKEmTcr4GRDxT5gXoIBdLL7MYLx8PGP19
DB_SSL=false

# Alternative database user (for Coolify compatibility)
# If you need to use attendance-dashboard as username, uncomment the line below:
# DB_USER=attendance-dashboard

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# For production with Redis password, set:
# REDIS_PASSWORD=your-secure-redis-password

# ============================================
# SECURITY SETTINGS
# ============================================
# CRITICAL: Change these secrets in production!
JWT_SECRET=QeHXxaL1WCYqI3BmjQKo4qzkF26IcAoS
SESSION_SECRET=your-super-secure-session-secret-change-in-production-$(date +%s)

# ============================================
# FRONTEND CONFIGURATION
# ============================================
FRONTEND_URL=http://localhost:3002
REACT_APP_API_URL=http://localhost:3002/api

# For Coolify deployment, update these to your domain:
# FRONTEND_URL=https://your-domain.com
# REACT_APP_API_URL=https://your-domain.com/api

# ============================================
# APPLICATION FEATURES
# ============================================
SERVE_STATIC=true
ENABLE_CLUSTERING=false
MAX_WORKERS=1

# ============================================
# PERFORMANCE & MONITORING
# ============================================
ENABLE_QUERY_LOGGING=false
ENABLE_EXPLAIN_ANALYZE=false
ENABLE_N_PLUS_ONE_DETECTION=true

# For development/debugging, enable detailed logging:
# ENABLE_QUERY_LOGGING=true
# ENABLE_EXPLAIN_ANALYZE=true

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
# Configure for password reset functionality
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=

# Example Gmail configuration:
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-specific-password

# ============================================
# OPTIONAL PORTS (for development)
# ============================================
# Uncomment and modify if you need different ports
# DB_PORT=5433
# REDIS_PORT=6380
# ADMINER_PORT=8081

# ============================================
# DEPLOYMENT SPECIFIC SETTINGS
# ============================================
# For Docker Compose deployment
COMPOSE_PROJECT_NAME=attendance-dashboard

# For Coolify deployment, these will be overridden by Coolify:
# DB_HOST=coolify-postgres-service
