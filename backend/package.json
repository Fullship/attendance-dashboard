{
  "name": "attendance-backend",
  "version": "1.0.0",
  "description": "Backend API for Employee Attendance Management",
  "main": "cluster-server.js",
  "scripts": {
    "start": "NODE_ENV=production node cluster-server.js",
    "start:single": "NODE_ENV=production ENABLE_CLUSTERING=false node server-worker.js",
    "start:cluster": "NODE_ENV=production ENABLE_CLUSTERING=true node cluster-server.js",
    "dev": "nodemon cluster-server.js",
    "dev:single": "ENABLE_CLUSTERING=false nodemon server-worker.js",
    "dev:cluster": "ENABLE_CLUSTERING=true nodemon cluster-server.js",
    "test": "jest",
    "auto-start": "node port-manager.js",
    "startup": "node ../start-servers.js",
    "cluster:start": "node cluster-server.js",
    "cluster:dev": "nodemon cluster-server.js",
    "cluster:monitor": "curl http://localhost:3003/cluster/health",
    "cluster:stats": "curl http://localhost:3003/cluster/stats",
    "cluster:restart": "curl -X POST http://localhost:3003/cluster/restart",
    "perf:doctor": "clinic doctor -- node cluster-server.js",
    "perf:flame": "clinic flame -- node cluster-server.js",
    "perf:bubbleprof": "clinic bubbleprof -- node cluster-server.js",
    "perf:all": "npm run perf:doctor && npm run perf:flame && npm run perf:bubbleprof",
    "perf:load-test": "node performance/load-test.js",
    "perf:analyze": "node performance/analyze-results.js",
    "perf:profile": "node performance/profile.js",
    "perf:profile-single": "node performance/profile.js single",
    "perf:clean": "rm -rf .clinic* && rm -rf performance/reports && rm -rf performance/load-test-results-*.json",
    "cache:test": "node test-redis-caching.js",
    "cache:test-core": "node test-redis-cache-only.js",
    "cache:stats": "curl http://localhost:3002/api/admin/cache/stats",
    "cache:invalidate": "curl -X POST http://localhost:3002/api/admin/cache/invalidate -H 'Content-Type: application/json' -d '{\"types\":[\"attendance_records\",\"dashboard_stats\"]}'",
    "cache:health": "node -e \"const cache = require('./utils/RedisCache'); cache.healthCheck().then(h => console.log('Redis Health:', h ? 'Connected' : 'Disconnected')).finally(() => process.exit(0));\"",
    "db:slow-query-report": "node slow-query-cli.js report",
    "db:slow-query-stats": "node slow-query-cli.js stats",
    "db:slow-query-watch": "node slow-query-cli.js watch",
    "db:slow-query-cleanup": "node slow-query-cli.js cleanup",
    "db:test-instrumentation": "node test-query-instrumentation.js",
    "memory:test": "NODE_ENV=development node test-memory-profiling.js",
    "memory:test-gc": "NODE_ENV=development node --expose-gc test-memory-profiling.js",
    "memory:monitor": "NODE_ENV=development node --expose-gc cluster-server.js",
    "profile:0x": "clinic 0x --on-port 'autocannon localhost:$npm_package_config_port --connections 50 --duration 20' -- node cluster-server.js",
    "profile:0x:prod": "clinic 0x -- node cluster-server.js",
    "profile:snapshot": "clinic 0x --dest=./flamegraphs -- node cluster-server.js & sleep 60; pkill -f 'clinic 0x'"
  },
  "dependencies": {
    "@datadog/browser-logs": "^6.13.0",
    "@datadog/datadog-ci": "^3.15.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "connect-redis": "^9.0.0",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dd-trace": "^5.59.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.2.0",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "moment-timezone": "^0.6.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "rate-limit-redis": "^4.2.1",
    "redis": "^5.6.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "split2": "^4.2.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@clinic/bubbleprof": "^10.0.0",
    "@clinic/doctor": "^11.0.0",
    "@clinic/flame": "^13.0.0",
    "clinic": "^13.0.0",
    "heapdump": "^0.3.15",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2"
  },
  "keywords": [
    "attendance",
    "api",
    "backend"
  ],
  "author": "",
  "license": "MIT"
}
