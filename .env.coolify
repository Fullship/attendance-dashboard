# Backend Environment Configuration for Coolify
# Copy this to your Coolify environment variables

# Application Settings
PORT=3002
NODE_ENV=production

# CORS and Frontend
FRONTEND_URL=https://your-frontend-domain.com

# Database Configuration (Update with your Coolify database credentials)
DB_HOST=your-postgres-host
DB_PORT=5432
DB_NAME=attendance_db
DB_USER=your-db-user
DB_PASSWORD=your-db-password

# Redis Configuration (Update with your Coolify Redis credentials)
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-2024

# Email Configuration (Optional - for password reset)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Performance Settings
ENABLE_CLUSTERING=true
MAX_WORKERS=4

# Monitoring (Optional)
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
